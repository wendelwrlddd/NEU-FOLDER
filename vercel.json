{
    "version": 2,
    "builds": [
      
      { "src": "api/*.js",        "use": "@vercel/node" },
      
      { "src": "public/**/*",     "use": "@vercel/static" }
    ],
    "routes": [
      
      { "src": "/comentarios",        "dest": "/api/comentarios.js" },
      { "src": "/create-pix-payment", "dest": "/api/create-pix-payment.js" },
  
      
      { "src": "/",                   "dest": "/public/index.html" },
  
      
      { "src": "/(.*)",               "dest": "/public/$1" }
    ]
  }
   